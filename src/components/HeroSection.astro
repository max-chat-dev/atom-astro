---
import { cn } from "@lib/utils"
import Container from "./Container.astro"
import { button } from "@tailus/themer-button"
import Frame from "./Frame.astro"

import { IoHardwareChipOutline } from "react-icons/io5";
import { MdSecurity } from "react-icons/md";
import { IoMdResize } from "react-icons/io";
import { BsNvidia } from "react-icons/bs";
---

<section class="relative overflow-hidden scroll-mt-24" id="home">
    <div aria-hidden class="opacity-0 dark:opacity-25 absolute [background-image:radial-gradient(theme(colors.gray.500),transparent_50%)] top-0 w-[1000px] z-10 h-[800px] left-1/2 -translate-x-1/2 -translate-y-1/2 pointer-events-none" />
    <Container>
        <div class="relative pt-32 sm:pt-44 ml-auto">
            <div class="lg:w-2/3 text-center mx-auto">
                <h1 class="text-gray-900 dark:text-white font-bold text-4xl sm:text-5xl md:text-6xl">Build AIs quickly without breaking the bank.</h1>
                <p class="max-w-xl mx-auto mt-8 text-gray-700 dark:text-gray-300">Create your own agents, fine-tune LLMs, and develop private custom models with just a few clicks on our platform based on the latest ML research papers.</p>
                <div class="mt-8 flex flex-wrap justify-center gap-y-4 gap-x-6">
                    <Frame>
                      <a href="https://chat.dev/dashboard" class={cn(button.primary.lg, "relative z-[1]")}>
                        Start Building
                      </a>
                    </Frame>
                </div>
                <div class="py-8 mt-16 gap-4 border-y dark:border-gray-800 flex-wrap flex justify-between">
                    <div class="text-left">
                      <IoMdResize />
                      <h2 class="my-2 text-base font-semibold text-gray-700 dark:text-white">Integrated</h2>
                        <p class="text-gray-600 dark:text-gray-400 text-sm">Combine your API with LLMs</p>
                    </div>
                    <div class="text-left">
                      <MdSecurity />
                      <h2 class="my-2 text-base font-semibold text-gray-700 dark:text-white">Controlled by You</h2>
                        <p class="text-gray-600 dark:text-gray-400 text-sm">Own your whole data stack</p>
                    </div>
                    <div class="text-left">
                      <BsNvidia />
                      <h2 class="my-2 text-base font-semibold text-gray-700 dark:text-white">Train on NVIDIA H100s</h2>
                        <p class="text-gray-600 dark:text-gray-400 text-sm">Use the best hardware</p>
                    </div>
                </div>
            </div>
        </div>
    </Container>
</section>