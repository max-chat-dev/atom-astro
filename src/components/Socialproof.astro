---
const investors = [
  {
    name: 'Y Combinator',
    logo: '/assets/investor-1.webp',
    alt: 'Sequoia Capital Logo'
  },
  {
    name: 'Venrex',
    logo: '/assets/investor-2.webp',
    alt: 'Andreessen Horowitz Logo'
  },
  {
    name: 'Amino Capital',
    logo: '/assets/investor-3.webp',
    alt: 'Accel Logo'
  },
  {
    name: 'Fellows.Fund',
    logo: '/assets/investor-4.webp',
    alt: 'Greylock Partners Logo'
  },
];
---

<section class="py-16 sm:py-20">
  <div class="mx-auto max-w-2xl px-4 sm:px-6 lg:max-w-7xl lg:px-8">
    <div class="flex flex-col gap-12 sm:gap-16">
      <h2 class="text-3xl font-medium tracking-tight sm:text-4xl">Backed By</h2>
      <div class="grid gap-8 lg:grid-cols-4">
        {
          investors.map((investor) => (
            <div class="flex justify-center items-center bg-primary-500/10 dark:bg-primary-400/10 rounded-3xl p-6">
              <img src={investor.logo} alt={investor.alt} class="max-h-12" />
            </div>
          ))
        }
      </div>
    </div>
  </div>
</section>